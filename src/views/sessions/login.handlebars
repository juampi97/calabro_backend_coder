<div class="container">
  <div class="d-flex flex-column">
    <h2 class="my-3 text-center">Login</h2>
  </div>
</div>

<form action="/session/login" method="post">
  <div class="container">
    <div class="d-flex flex-row justify-content-around">
      <div class="col-4">
        <div class="row">
          <label for="email">Email</label><br />
          <input type="text" name="email" id="email" required /><br />
        </div>
        <div class="row">
          <label for="password">Password</label><br />
          <input type="text" name="password" id="password" required /><br />
        </div>
        <input class="mt-3" type="submit" value="Login">
      </div>
    </div>
  </div>
</form>
<div class="d-flex flex-row justify-content-around">
  <div class="col-4 d-flex flex-row justify-content-center">
    <button class="me-2"><a class="text-black" href="/session/github" style="text-decoration: none;">Login Github</a></button>
    <button class="me-2"><a class="text-black" href="/session/register" style="text-decoration: none;">Registrarse</a></button>
  </div>
</div>